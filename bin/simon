#!/usr/bin/env node

/**
	 _____                      ______
	/  ___|                     | ___ \
	\ `--.   ___    __ _  _ __  | |_/ /  ___  __  __
	 `--. \ / _ \  / _` || '_ \ | ___ \ / _ \ \ \/ /
	/\__/ /| (_) || (_| || |_) || |_/ /| (_) | >  <
	\____/  \___/  \__,_|| .__/ \____/  \___/ /_/\_\
	 _____  _            | |
	/  ___|(_)           |_|
	\ `--.  _  _ __ ___    ___   _ __
	 `--. \| || '_ ` _ \  / _ \ | '_ \
	/\__/ /| || | | | | || (_) || | | |
	\____/ |_||_| |_| |_| \___/ |_| |_|

	Command-line Interface for SoapBox Devs.
	See `simon help` for more info

	Â© 2014 SoapBox Innovations Inc.
*/

var cli = require('../index.js');

if (cli.program.args.length === 0) {

	// Add additional configuration options
	cli.configure(
		cli.simon,
		cli.options,
		cli.program
	);

	// No args found, run the watch task with interactive mode
	cli.simon.watch();
	cli.simon.prompt();

} else {

	// Simon will not be running interactive mode, close the prompt
	cli.simon.closeRl();
}
